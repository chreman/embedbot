[
  {
    "classification": "spark-defaults",
    "properties": {
      "spark.driver.memory": "50g",
      "spark.driver.maxResultSize": "45g",
      "spark.executor.memory":"40g",
      "spark.dynamicAllocation.enabled":"true",
      "spark.serializer":"org.apache.spark.serializer.KryoSerializer",
      "spark.kryoserializer.buffer.max":"1900m",
      "spark.python.worker.memory":"2g",
      "spark.rdd.compress":"true",
      "spark.rpc.message.maxSize":"512",
      "spark.executor.extraJavaOptions":"-XX:+UseG1GC",
      "spark.hadoop.fs.s3a.endpoint":"s3.eu-central-1.amazonaws.com",
      "spark.network.timeout":"1200",
      "spark.executor.heartbeatInterval":"120"
    }
  }
]
